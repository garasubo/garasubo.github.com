---
const {
    title = "@garasubo",
    description = "Software Engineer (Rust / IoT / Systems / Web)",
    lang = "ja",
} = Astro.props;
import '../styles/globals.scss';
---

<!doctype html>
<html lang={lang} class="h-full">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="icon" href="/favicon.png" type="image/png" />
    </head>
    <body class="min-h-full">
        <header class="mx-auto flex max-w-6xl items-center justify-between px-4 py-6">
            <a href="/" class="text-xl font-extrabold tracking-tight">@garasubo</a>
            <nav class="flex items-center gap-6 text-sm font-medium text-slate-600 dark:text-slate-300">
                <a
                    href="/blog/"
                    class="transition-colors hover:text-blue-600 dark:hover:text-blue-400"
                >
                    Blog
                </a>
                <slot name="header" />
            </nav>
        </header>

        <main class="mx-auto max-w-6xl px-4">
            <slot />
        </main>
    </body>
</html>
