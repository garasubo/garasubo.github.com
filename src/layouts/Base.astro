---
import type { ImageMetadata } from 'astro';
const {
    title = "@garasubo",
    description = "Software Engineer (Rust / IoT / Systems / Web)",
    lang = "ja",
    image,
    imageAlt = '',
    ogType = 'website',
} = Astro.props as {
    title?: string;
    description?: string;
    lang?: string;
    image?: string | ImageMetadata;
    imageAlt?: string;
    ogType?: 'website' | 'article';
};
import '../styles/globals.scss';
const canonicalUrl = Astro.url;
const siteName = '@garasubo';
const locale = lang === 'ja' ? 'ja_JP' : 'en_US';
const imagePath = typeof image === 'object' ? image?.src : image;
const fallbackImage = '/og_image_fallback.png';
const selectedImage = imagePath ?? fallbackImage;
const absoluteImageUrl = new URL(selectedImage, canonicalUrl).toString();
---

<!doctype html>
<html lang={lang} class="h-full">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={canonicalUrl.toString()} />
        <!-- Open Graph -->
        <meta property="og:type" content={ogType} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:url" content={canonicalUrl.toString()} />
        <meta property="og:site_name" content={siteName} />
        <meta property="og:locale" content={locale} />
        <meta property="og:image" content={absoluteImageUrl} />
        {imageAlt && <meta property="og:image:alt" content={imageAlt} />}
        <!-- Twitter -->
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@garasubo" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={absoluteImageUrl} />
        <link rel="icon" href="/favicon.png" type="image/png" />
    </head>
    <body class="min-h-full">
        <header class="mx-auto flex max-w-6xl items-center justify-between px-4 py-6">
            <a href="/" class="text-xl font-extrabold tracking-tight">@garasubo</a>
            <nav class="flex items-center gap-6 text-sm font-medium text-slate-600 dark:text-slate-300">
                <a
                    href="/blog/"
                    class="transition-colors hover:text-blue-600 dark:hover:text-blue-400"
                >
                    Blog
                </a>
                <slot name="header" />
            </nav>
        </header>

        <main class="mx-auto max-w-6xl px-4">
            <slot />
        </main>
    </body>
</html>
