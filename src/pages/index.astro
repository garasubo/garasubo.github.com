---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import Card from "../components/Card.astro";
import TalkCard from "../components/TalkCard.astro";

const cta = [
    { label: 'GitHub', href: 'https://github.com/garasubo' },
    { label: 'Medium', href: 'https://medium.com/@garasubo' },
    { label: 'Twitter', href: 'https://x.com/garasubo' },
    { label: 'Mastodon', href: 'https://mstdn.jp/@garasubo' },
];

const applications = [
    { title: 'T-Visor', href: 'https://github.com/garasubo/T-Visor', desc: 'Type-1 Hypervisor for ARMv7-A architectures' },
    { title: 'ErkOS', href: 'https://github.com/garasubo/erkos', desc: 'A prototype embedded operating system written in Rust' },
];

const publications = [
    { title: 'インプレスR&D「Rustで始める自作組込みOS入門」', href: 'https://nextpublishing.jp/book/14912.html', desc: '' },
    { title: 'Rustで始める自作組込みOS入門(技術書典11)', href: 'https://techbookfest.org/product/6484983722016768?productVariantID=4877729004519424', desc: '' },
    { title: '技術評論社 Software Design 2021年9月号 第１特集第３章 Rustのメモリ管理機能とその特徴', href: 'https://gihyo.jp/magazine/SD/archive/2021/202109', desc: '' },
];

const talks = [
    { title: 'IoTプラットフォーム開発におけるRustの活用', href: 'https://rust.tokyo/2023/lineup/1', eventTitle: 'Rust.Tokyo 2023', eventHref: 'https://rust.tokyo/2023' },
    { title: 'allocクレートを使えるようにする', href: 'https://docs.google.com/presentation/d/1mT1N22j0zPIutotZSSgjsoLIn4-tp14qG02K3uazEyw/edit?usp=sharing', eventTitle: 'Shijuku.rs #18', eventHref: 'https://forcia.connpass.com/event/224438/' },
    { title: 'RustでOSを実装する ', href: 'https://docs.google.com/presentation/d/1iHxIPbEC8pYimheyXYtOVvK-bGgMIC6PEkuwiUT6l4M/edit?usp=sharing', eventTitle: 'Toppers開発者会議2021', eventHref: 'https://www.toppers.jp/devconf2021.html' },
    { title: 'RustはOS界の銀の弾丸になりうるか ', href: 'https://docs.google.com/presentation/d/1RRccgmR-EsnfanWrpyywvx4fDbohEHWuqsAoMAT6YUY/edit?usp=sharing', eventTitle: 'Kernel/VM探検隊online part2', eventHref: 'https://kernelvm.connpass.com/event/201059/' },
];

const blogPosts = (await getCollection('blog'))
    .filter((post) => import.meta.env.DEV || post.data.draft !== true)
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 3);

const formatter = new Intl.DateTimeFormat('ja-JP', { dateStyle: 'medium' });
---
<Base title="@garasubo — Software Engineer" description="Rust / IoT / Systems" lang="ja">

    <!-- Hero -->
    <section class="py-16 md:py-24 text-center">
        <div class="mx-auto max-w-prose">
            <h1 class="text-3xl md:text-5xl font-extrabold tracking-tight">
                @garasubo
            </h1>
            <p class="mt-3 text-lg md:text-xl text-slate-600 dark:text-slate-300">
                Software Engineer — Rust / IoT / Systems / Web
            </p>
            <div class="mt-6 flex flex-wrap items-center justify-center gap-3">
                {cta.map((b) => (
                    <a
                        class="inline-flex items-center rounded-full border border-white/10 px-4 py-2 text-sm font-medium hover:opacity-90"
                        href={b.href} target="_blank" rel="noopener noreferrer"
                    >{b.label}</a>
                ))}
            </div>
        </div>
    </section>

    <!-- Blog -->
    <section class="max-w-4xl mx-auto px-6 py-10" aria-labelledby="blog">
        <div class="flex items-center justify-between gap-4">
            <div>
                <h2 id="blog" class="text-sm font-semibold uppercase tracking-wide text-gray-500 dark:text-gray-400">Blog</h2>
                <p class="mt-2 text-slate-600 dark:text-slate-300">
                    最新のブログ記事をピックアップして紹介します。
                </p>
            </div>
            {blogPosts.length > 0 && (
                <a href="/blog/" class="text-sm font-medium text-blue-600 hover:underline dark:text-blue-400">
                    すべての記事を見る →
                </a>
            )}
        </div>
        <div class="mt-6 space-y-6">
            {blogPosts.length === 0 ? (
                <p class="text-slate-600 dark:text-slate-300">
                    まだ記事はありませんが、順次公開していく予定です。
                </p>
            ) : (
                blogPosts.map((post) => (
                    <a
                        href={`/blog/${post.slug}/`}
                        class="block rounded-2xl border border-white/10 bg-white/70 p-6 shadow-sm transition-all duration-200 ease-out hover:-translate-y-0.5 hover:shadow dark:bg-slate-900/50"
                    >
                        <h3 class="text-xl font-semibold tracking-tight text-slate-900 dark:text-slate-100">
                            {post.data.title}
                        </h3>
                        <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">
                            {post.data.description}
                        </p>
                        <div class="mt-4 flex flex-wrap items-center gap-4 text-xs text-slate-500 dark:text-slate-400">
                            <time datetime={post.data.pubDate.toISOString()}>
                                {formatter.format(post.data.pubDate)}
                            </time>
                            {post.data.tags?.length ? (
                                <ul class="flex flex-wrap gap-2 text-[11px] font-medium">
                                    {post.data.tags.map((tag) => (
                                        <li class="rounded-full bg-slate-100 px-2.5 py-0.5 text-slate-600 dark:bg-slate-800 dark:text-slate-300">
                                            {tag}
                                        </li>
                                    ))}
                                </ul>
                            ) : null}
                        </div>
                    </a>
                ))
            )}
        </div>
    </section>


    <!-- Applications -->
    <section class="max-w-4xl mx-auto px-6 py-10" aria-labelledby="apps">
        <h2 id="apps" class="text-sm font-semibold uppercase tracking-wide text-gray-500 dark:text-gray-400">Applications</h2>
        <div class="mt-3 grid gap-4 sm:grid-cols-2">
            {applications.map((item) => (
                <Card href={item.href} title={item.title} desc={item.desc} />
            ))}
        </div>
    </section>

    <!-- Talks -->
    <section class="max-w-4xl mx-auto px-6 py-10" aria-labelledby="talks">
        <h2 id="talks" class="text-sm font-semibold uppercase tracking-wide text-gray-500 dark:text-gray-400">Talks</h2>
        <div class="mt-3">
            See also my <a class="underline hover:opacity-90" href="https://speakerdeck.com/garasubo" target="_blank" rel="noopener noreferrer">Speaker Deck</a>
        </div>
        <div class="mt-3 grid gap-4 sm:grid-cols-2">
            {talks.map((item) => (
                <TalkCard href={item.href} title={item.title} eventTitle={item.eventTitle} eventHref={item.eventHref} />
            ))}
        </div>
    </section>

    <!-- Publications -->
    <section class="max-w-4xl mx-auto px-6 py-10" aria-labelledby="pubs">
        <h2 id="pubs" class="text-sm font-semibold uppercase tracking-wide text-gray-500 dark:text-gray-400">Publications</h2>
        <div class="mt-3 grid gap-4 sm:grid-cols-2">
            {publications.map((item) => (
                <Card href={item.href} title={item.title} desc={item.desc} />
            ))}
        </div>
    </section>
</Base>
