{
    "$schema": "https://json.schemastore.org/prettierrc",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all",
    "arrowParens": "always",
    "overrides": [
        {
            "files": "*.md",
            "options": { "proseWrap": "preserve" }
        },
        {
            "files": "*.mdx",
            "options": { "proseWrap": "preserve" }
        }
    ]
}
